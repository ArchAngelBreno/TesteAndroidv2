<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="basic_edit_text">
        <item name="android:textSize">@dimen/et_size</item>
        <item name="android:textColor">@color/light_black</item>
        <item name="android:background">@drawable/et_form_login_rounded</item>
        <item name="android:layout_marginTop">@dimen/moderate_margin</item>
        <item name="android:padding">@dimen/small_margin</item>
    </style>

    <style name="basic_button">
        <item name="android:textSize">@dimen/btn_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@color/beatifulBlue</item>
    </style>

    <style name="account_big_text">
        <item name="android:textSize">@dimen/user_information_high_size</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="account_small_text">
        <item name="android:textSize">@dimen/user_information_size</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/white</item>
    </style>



</resources>
