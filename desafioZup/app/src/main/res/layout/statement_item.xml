<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_statement_container"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_gravity="center_horizontal"
    android:layout_marginEnd="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="1dp"
    app:cardElevation="2dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_statement_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="#A8B4C4"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toStartOf="@+id/tv_statement_date"
            android:layout_marginStart="16dp" />

        <TextView
            android:id="@+id/tv_statement_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_statement_title"
            app:layout_constraintStart_toStartOf="@+id/tv_statement_title"
            app:layout_constraintEnd_toStartOf="@+id/tv_statement_price"
            android:layout_marginTop="16dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_statement_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_statement_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_statement_date"
            app:layout_constraintEnd_toEndOf="@+id/tv_statement_date"
            android:layout_marginTop="16dp"
            android:textSize="16sp" />


    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>