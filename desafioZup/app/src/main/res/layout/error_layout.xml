<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_migration_plan_refresh"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginBottom="@dimen/high_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/icn_refresh" />

    <TextView
        android:id="@+id/text_migration_plan_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="12sp"
        android:text="@string/search_information_error"
        app:layout_constraintEnd_toEndOf="@+id/image_migration_plan_refresh"
        app:layout_constraintStart_toStartOf="@+id/image_migration_plan_refresh"
        app:layout_constraintTop_toBottomOf="@+id/image_migration_plan_refresh" />

    <TextView
        android:id="@+id/text_migration_plan_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="@string/press_refresh"
        app:layout_constraintEnd_toEndOf="@+id/text_migration_plan_title"
        app:layout_constraintStart_toStartOf="@+id/text_migration_plan_title"
        app:layout_constraintTop_toBottomOf="@+id/text_migration_plan_title" />
    <View
        android:layout_width="1dp"
        android:layout_height="94dp"
        app:layout_constraintEnd_toEndOf="@+id/text_migration_plan_title"
        app:layout_constraintStart_toStartOf="@+id/text_migration_plan_title"
        app:layout_constraintTop_toBottomOf="@+id/text_migration_plan_subtitle" />

</android.support.constraint.ConstraintLayout>